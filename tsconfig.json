{
    "typeAcquisition": {
        "enable": true
    },
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "ESNext",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "downlevelIteration": true,
        "baseUrl": ".",
        "allowJs": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "lib": ["es2018", "dom"],
        "typeRoots": ["node_modules/@types", "./typings", "./typings.d.ts"]
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx"]
}
